        <li>
          <a href="<%= urlFor('monitorPage.nodesStats') %>">
            <i class="fa fa-fw fa-cubes"></i>
            <%= __('Nodes Stats') %>
          </a>
        </li>

        <li>
          <a href="<%= urlFor('monitorPage.nodesReport') %>">
            <i class="fa fa-fw fa-stethoscope"></i>

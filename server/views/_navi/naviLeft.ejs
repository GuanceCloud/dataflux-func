    <a href="<%= urlFor(CONFIG._WEB_DASHBOARD_PAGE || 'indexPage.dashboard') %>">
      <i class="fa fa-fw fa-dashboard"></i>
      <%= __('Dashboard') %>
    </a>
  </li>

  <%_ if (currentUser.can('user_r')) { _%>
    <li>
      <a href="<%= urlFor('userPage.list') %>">
        <i class="fa fa-fw fa-users"></i>
        <%= __('Users') %>
      </a>
    </li>
  <%_ } _%>

  <%_ if (currentUser.can('general_r')) { _%>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">
